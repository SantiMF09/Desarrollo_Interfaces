<Window x:Class="Inicio.Compra_Reserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inicio"
        mc:Ignorable="d"
        Title="Compra_Reserva" Height="150" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Label Content="¿Qué desea hacer, comprar, o reservar una entrada?" HorizontalAlignment="Left" Margin="103,10,0,0" VerticalAlignment="Top" Height="26" Width="288" Grid.ColumnSpan="4"/>
        <Button x:Name="Btn_Reservar" Content="Reservar" HorizontalAlignment="Left" Margin="86,89,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.ColumnSpan="2" Click="Reservar_Click"/>
        <Button x:Name="Btn_Comprar" Content="Comprar" HorizontalAlignment="Left" Margin="86,89,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2" Height="20" Grid.ColumnSpan="2" Click="Comprar_Click"/>

    </Grid>
</Window>
